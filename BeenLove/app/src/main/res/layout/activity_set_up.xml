<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setUp"
    android:background="@drawable/bg1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-29dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Been Love Memory"
            android:textSize="50dp"
            android:fontFamily="@font/filxgirl"
            android:textColor="#FF4181"
            >
        </TextView>
        <TextView
            android:id="@+id/DateOfLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Love"
            android:textSize="30dp"
            android:fontFamily="@font/dancing_script"
            android:textColor="#FFFEFE"
            >
        </TextView>
        <TextView
            android:id="@+id/totalDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:fontFamily="@font/dancing_script"
            android:textColor="#DD0E0D0D"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textColor="#FF4181"
            android:fontFamily="@font/filxgirl"
            android:textSize="30dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="128dp"
                    android:src="@drawable/boy" />

                <TextView
                    android:id="@+id/nameBoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nick name 1"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="128dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/girl1"
                    />

                <TextView
                    android:id="@+id/nameGirl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="Nick name 2"
                    android:textColor="#ffffff"
                    android:textSize="18dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnYear"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="#302E2E"
                    android:layout_marginTop="30dp"
                    android:textSize="40dp"
                    android:fontFamily="@font/filxgirl"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="#FF4181"
                    android:textSize="23dp"
                    android:fontFamily="@font/dancing_script"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMonth"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#302E2E"
                    android:layout_marginTop="30dp"
                    android:textSize="40dp"
                    android:fontFamily="@font/filxgirl"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/dancing_script"
                    android:textColor="#FF4181"
                    android:textSize="23dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDay"
                    android:background="@android:color/transparent"
                    android:textColor="#302E2E"
                    android:layout_marginTop="30dp"
                    android:textSize="40dp"
                    android:fontFamily="@font/filxgirl"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:textColor="#FF4181"
                    android:textSize="23dp"
                    android:fontFamily="@font/dancing_script"
                    android:layout_marginLeft="2dp"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnHour"
                    android:background="@android:color/transparent"
                    android:textColor="#302E2E"
                    android:layout_marginTop="30dp"
                    android:textSize="40dp"
                    android:fontFamily="@font/filxgirl"
                    android:textStyle="bold|italic"
                    />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Hour  "
                    android:fontFamily="@font/dancing_script"
                    android:textColor="#FF4181"
                    android:textSize="23dp"

                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMinute"
                    android:background="@android:color/transparent"
                    android:textColor="#302E2E"
                    android:layout_marginTop="30dp"
                    android:textSize="40dp"
                    android:fontFamily="@font/filxgirl"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minute"
                    android:textColor="#FF4181"
                    android:textSize="23dp"
                    android:fontFamily="@font/dancing_script"
                    android:layout_marginLeft="2dp"

                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSecond"
                    android:background="@android:color/transparent"
                    android:textColor="#302E2E"
                    android:layout_marginTop="30dp"
                    android:textSize="40dp"
                    android:fontFamily="@font/filxgirl"
                    android:textStyle="bold|italic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second"
                    android:textColor="#FF4181"
                    android:textSize="23dp"
                    android:fontFamily="@font/dancing_script"
                    >

                </TextView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>